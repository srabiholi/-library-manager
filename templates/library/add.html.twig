{% extends 'base.html.twig' %}

{% block title %}Ajoute un livre{% endblock %}
{% block stylesheets %}

{% endblock %}
{% block body %}

<div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

        <h3 class="text-center my-4">Ajoute un livre</h3>

        <div class="mb-5">
        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.author) }}
        {{ form_row(form.resume) }}
        {{ form_row(form.picture) }}
        {{ form_row(form.price) }}
        {{ form_row(form.isRead) }}
        {{ form_row(form.own) }}
        {{ form_row(form.category) }}



        <button type="submit" class="btn btn-sm btn-success">Valider</button>
        {{ form_end(form) }}
        </div>

</div>

{% endblock %}